{% extends "MYMoneyBundle:Admin:layout.html.twig" %}

{% block title_admin %}
	<a href="#">Banques</a>
{% endblock %}

{% block body_admin %}
	<div class="row">
		<div class="[ col-xs-12 ]">
        <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
              {{ form_label(form.name, "Nom de la banque", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              {{ form_errors(form.name) }}

              <div class="col-sm-8">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8 text-right">
                    <a href="#" class="btn btn-warning">Annuler</a>
                    <a href="#" class="btn btn-primary">Enregistrer</a>
                </div>
            </div>

            {{ form_rest(form) }}
        {{ form_end(form) }}
        </div>
		</div>
	</div>
{% endblock %}