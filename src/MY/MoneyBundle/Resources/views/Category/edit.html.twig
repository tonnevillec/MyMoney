{% extends "MYMoneyBundle:Admin:layout.html.twig" %}

{% block title_admin %}
	<a href="#">Edition de la cat√©gorie</a>
{% endblock %}

{% block body_admin %}
	<div class="row">
		<div class="[ col-xs-12 ]">
        <div class="well">
          <form action="{{ path('my_money_admin_category_edit', {'id': category.id }) }}" method="post" class="form-horizontal">
            {{ form_errors(form) }}

            <div class="form-group">
              {{ form_label(form.name, "Nom de la banque", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              {{ form_errors(form.name) }}

              <div class="col-sm-8">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8 text-right">
                    <a href="{{ path('my_money_admin_category') }}" class="btn btn-warning">Annuler</a>
                    <input type="submit" class="btn btn-primary" value="Enregistrer">
                </div>
            </div>

            {{ form_rest(form) }}
          </form>
        </div>
		</div>
	</div>
{% endblock %}