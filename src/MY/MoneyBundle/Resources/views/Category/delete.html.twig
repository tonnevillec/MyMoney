{% extends "MYMoneyBundle::layout.html.twig" %}

{% block mymoney_body %}
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header"><i class="fa fa-cogs"></i> {{ category.name }}</h1>

    <h2>Suppression de catégorie</h2>
    <p>Etes-vous certain de vouloir supprimer la catégorie "{{ category.name }}" ?</p>

    <form action="{{ path('my_money_admin_category_delete', {'id': category.id}) }}" method="post">
      <a href="{{ path('my_money_admin_category') }}" class="btn btn-default">
        <i class="fa fa-chevron-left"></i> Annuler
      </a>
      <input type="submit" value="Supprimer" class="btn btn-danger" />
      {{ form_rest(form) }}
    </form>
  </div>
{% endblock %}