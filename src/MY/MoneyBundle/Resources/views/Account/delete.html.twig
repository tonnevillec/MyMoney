{% extends "MYMoneyBundle::layout.html.twig" %}

{% block mymoney_body %}
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="page-header"><i class="fa fa-cogs"></i> {{ account.name }} [N°{{ account.number }}]</h1>

    <h2>Suppression du compte</h2>
    <p>Etes-vous certain de vouloir supprimer le compte "{{ account.name }}  [N°{{ account.number }}]" ainsi que l'historique des opérations ?</p>

    {# On met l'id du compte dans la route de l'action du formulaire #}
    <form action="{{ path('my_money_account_delete', {'id': account.id}) }}" method="post">
      <a href="{{ path('my_money_account', {'id': account.id}) }}" class="btn btn-default">
        <i class="fa fa-chevron-left"></i> Annuler
      </a>
      <input type="submit" value="Supprimer" class="btn btn-danger" />
      {{ form_rest(form) }}
    </form>
  </div>
{% endblock %}