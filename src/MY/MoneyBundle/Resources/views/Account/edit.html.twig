{% extends "MYMoneyBundle::layout.html.twig" %}

{% block mymoney_body %}
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      	<h1 class="page-header"><i class="fa fa-cogs"></i> {{ account.name }} [N°{{ account.number }}]</h1>

		<div class="well">
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			{{ form_errors(form) }}

		    <div class="form-group">
		      {{ form_label(form.name, "Libellé du compte", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		      {{ form_errors(form.name) }}

		      <div class="col-sm-8">
		        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		      </div>
		    </div>

		    <div class="form-group">
		      {{ form_label(form.number, "Numéro du compte", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		      {{ form_errors(form.number) }}

		      <div class="col-sm-8">
		        {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
		      </div>
		    </div>

		    <div class="form-group">
		      {{ form_label(form.total, "Solde réel", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		      {{ form_errors(form.total) }}

		      <div class="col-sm-5">
	        	<div class="input-group">
		        	{{ form_widget(form.total, {'attr': {'class': 'form-control text-right'}}) }}
		        	<div class="input-group-addon">€</div>
		        </div>
		      </div>
		    </div>

		    <div class="form-group">
		      {{ form_label(form.banks, "Banque", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		      {{ form_errors(form.banks) }}

		      <div class="col-sm-8">
		        	{{ form_widget(form.banks, {'attr': {'class': 'form-control text-right'}}) }}
		      </div>
		    </div>

		    <div class="form-group">
		    	<div class="col-sm-offset-3 col-sm-8">
				    <label>
				    	<div class="checkbox">
				      		{{ form_widget(form.enabled) }} Compte actif
				    	</div>
				    </label>
			    </div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-8 text-right">
					<a href="#" class="btn btn-warning">Annuler</a>
					{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
				</div>
			</div>

		    {{ form_rest(form) }}
		{{ form_end(form) }}
		</div>
  	</div>
{% endblock %}