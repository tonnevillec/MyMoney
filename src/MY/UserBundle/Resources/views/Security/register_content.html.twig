<div class="panel panel-default panel-login">
    <div class="panel-heading">
        <span class="fa fa-user-plus"></span> S'ENREGISTRER</div>
    <div class="panel-body">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group first">
              {{ form_label(form.username, "Utilisateur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              {{ form_errors(form.username) }}

              <div class="col-sm-8">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
              {{ form_label(form.email, "@Mail", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              {{ form_errors(form.email) }}

              <div class="col-sm-8">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
              {{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
              {{ form_errors(form.password) }}

              <div class="col-sm-8">
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8 text-right">
                    <a href="{{ path('my_core_homepage') }}" class="btn btn-warning">Annuler</a>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>