{% extends "MYMoneyBundle:Admin:layout.html.twig" %}

{% block title_admin %}
	<a href="#">Utilisateurs</a>
{% endblock %}

{% block body_admin %}
	<div class="row">
		<div class="[ col-xs-12 ]">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="fa fa-list"></span> Liste des utilisateurs
                    <div class="pull-right action-buttons">
                    	<a href="{{ path('my_money_admin_user_add') }}" class="btn btn-success btn-xs"><i class="fa fa-plus"></i> Nouvel utilisateur</a>
                    </div>
                </div>

                <div class="table-responsive">
	                <table class="table table-hover table-condensed">
	                	<thead>
	                		<tr>
	                			<th>Login</th>
	                			<th>Mail</th>
	                			<th>Derni√®re connexion</th>
	                			<th>Actions</th>
	        				</tr>
	        			</thead>
	        			<tfoot>
	        				<tr>
	        					<td colspan="4"></td>
	        				</tr>
	        			</tfoot>
	        			<tbody>
		            	{% for user in users %}
		            		<tr class="{% if user.enabled %}success{% else %}danger{% endif %}">
	                			<td>{{ user.username }}</td>
	                			<td>{{ user.email }}</td>
	                			<td>{{ user.lastlogin|date('d M Y H:i') }}</td>
	                			<td>
	                				<a href="{{ path('my_money_admin_user_edit', {'id': user.id }) }}"><span class="fa fa-pencil"></span></a>
	                				<a href="{{ path('my_money_admin_user_delete', {'id': user.id }) }}" class="trash"><span class="fa fa-trash"></span></a>
	                			</td>
		            		</tr>
		                {% endfor %}
	                	</tbody>
	            	</table>
                </div>
            </div>
		</div>
	</div>
{% endblock %}